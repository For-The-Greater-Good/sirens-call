---
export interface Props {
  title?: string;
  subtitle?: string;
  icon?: string;
  iconAlt?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
  color?: 'rust' | 'teal' | 'gold' | 'ink';
  rotate?: boolean;
  animate?: boolean;
}

const { 
  title, 
  subtitle, 
  icon, 
  iconAlt = '',
  size = 'md', 
  color = 'rust',
  rotate = true,
  animate = false
} = Astro.props;

const sizeClasses = {
  sm: 'badge-sm',
  md: 'badge-md',
  lg: 'badge-lg',
  xl: 'badge-xl'
};

const colorClasses = {
  rust: 'badge-rust',
  teal: 'badge-teal', 
  gold: 'badge-gold',
  ink: 'badge-ink'
};
---

<div 
  class={`vintage-badge ${sizeClasses[size]} ${colorClasses[color]} ${rotate ? 'rotate-slight' : ''} ${animate ? 'badge-animate' : ''}`}
  style={`--rotation-factor: ${rotate ? Math.random() * 2 - 1 : 0}`}
>
  {animate && (
    <div class="radio-wave"></div>
    <div class="radio-wave"></div>
    <div class="radio-wave"></div>
  )}
  
  {icon && (
    <div class="badge-icon">
      <img src={icon} alt={iconAlt} class="badge-image" />
    </div>
  )}
  
  {title && (
    <h3 class="badge-title">{title}</h3>
  )}
  
  {subtitle && (
    <p class="badge-subtitle">{subtitle}</p>
  )}
  
  <div class="badge-content">
    <slot />
  </div>
</div>

<style>
  .vintage-badge {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-xl);
    background: var(--paper-light);
    border: var(--border-thick);
    border-radius: 50%;
    position: relative;
    box-shadow: var(--shadow-print);
    transition: transform 0.3s ease;
    filter: url(#roughEdgeSubtle);
  }
  
  /* Size Variants */
  .badge-sm {
    min-width: 150px;
    min-height: 150px;
    padding: var(--space-md);
  }
  
  .badge-md {
    min-width: 200px;
    min-height: 200px;
  }
  
  .badge-lg {
    min-width: 300px;
    min-height: 300px;
  }
  
  .badge-xl {
    min-width: 400px;
    min-height: 400px;
    padding: var(--space-2xl);
  }
  
  /* Color Variants */
  .badge-rust {
    background: linear-gradient(135deg, var(--paper-light) 0%, var(--rust-muted) 100%);
    border-color: var(--rust-orange);
  }
  
  .badge-rust::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: calc(100% + 20px);
    height: calc(100% + 20px);
    border: 3px solid var(--rust-orange);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    opacity: 0.5;
  }
  
  .badge-teal {
    background: linear-gradient(135deg, var(--paper-light) 0%, var(--ocean-teal) 100%);
    border-color: var(--ocean-teal);
  }
  
  .badge-teal::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: calc(100% + 20px);
    height: calc(100% + 20px);
    border: 3px solid var(--ocean-teal);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    opacity: 0.5;
  }
  
  .badge-gold {
    background: linear-gradient(135deg, var(--paper-light) 0%, var(--mustard-gold) 100%);
    border-color: var(--mustard-gold);
  }
  
  .badge-gold::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: calc(100% + 20px);
    height: calc(100% + 20px);
    border: 3px solid var(--mustard-gold);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    opacity: 0.5;
  }
  
  .badge-ink {
    background: linear-gradient(135deg, var(--paper-light) 0%, var(--ink-soft) 100%);
    border-color: var(--ink-black);
    color: var(--vintage-cream);
  }
  
  .badge-icon {
    width: 60%;
    height: 60%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-sm);
  }
  
  .badge-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(2px 2px 0 var(--ink-black));
  }
  
  .badge-title {
    font-size: var(--font-scale-xl);
    text-transform: uppercase;
    letter-spacing: -0.03em;
    text-align: center;
    margin-bottom: var(--space-xs);
    text-shadow: 2px 2px 0 var(--ink-black);
  }
  
  .badge-subtitle {
    font-size: var(--font-scale-sm);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    text-align: center;
    opacity: 0.8;
  }
  
  .badge-content {
    text-align: center;
  }
  
  /* Hover Effects */
  .vintage-badge:hover {
    transform: rotate(0deg) scale(1.02);
  }
  
  /* Animation */
  .badge-animate {
    animation: badge-pulse 4s ease-in-out infinite;
  }
  
  @keyframes badge-pulse {
    0%, 100% {
      transform: rotate(var(--rotation-factor, 0deg)) scale(1);
    }
    50% {
      transform: rotate(0deg) scale(1.05);
    }
  }
  
  /* Radio Waves */
  .radio-wave {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    border: 2px solid var(--rust-orange);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    animation: radio-wave 3s ease-out infinite;
    pointer-events: none;
  }
  
  @keyframes radio-wave {
    0% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
    100% {
      transform: translate(-50%, -50%) scale(1.5);
      opacity: 0;
    }
  }
  
  .radio-wave:nth-child(2) {
    animation-delay: 1s;
  }
  
  .radio-wave:nth-child(3) {
    animation-delay: 2s;
  }
</style>