---
import RadioDialNav from '../components/RadioDialNav.astro';
import VintageFilters from '../components/VintageFilters.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "For The Greater Good - Broadcasting Food Security Since 2024" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/ftgg-logo.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://for-the-gg.org" />
    <meta property="og:image" content="https://for-the-gg.org/images/ftgg-logo.png" />
    
    <title>{title} | FTGG Radio</title>
  </head>
  <body>
    <VintageFilters />
    <RadioDialNav />
    <main style="padding-top: 120px;">
      <slot />
    </main>
    <Footer />
  </body>
</html>